doctype html
html
  head
    title Formulário Simples
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css')

    link(rel='stylesheet', href='stylesheets/style.css')
  body

    .container
  .row
    .col
      nav(aria-label="breadcrumb")
        ol.breadcrumb
          li.breadcrumb-item
            a(href="index.html") Worklog
          li.breadcrumb-item.active(aria-current="page") Novo registro
  .row
    .col
      form
        .row
          .col
            .form-group
              label.col-form-label.col-form-label-sm(for="InputData") Data
              input#InputData.form-control.form-control-sm(type="date")
        .row
          .col
            select.form-control.form-control-sm
              option Blade Repair
              option Tower Repair
              option Tower Clean
              option Addons
          .col
            select.form-control.form-control-sm
              option Team leader
              option(selected) Técnico 1
              option Técnico 2
              option Trenner
        .row
          .col
            select.form-control.form-control-sm
              option Work
              option Standing WC
              option Standing GRW
              option Standing C
              option Travel
          .col
            select.form-control.form-control-sm
              option Trabalho
              option Apoio
              option
        .row
          .col
            select.form-control.form-control-sm
              option Nacelle
              option Hub
              option Tower
              option Blade A
              option Blade B
              option Blade C
              option
        .row
          .col
            .form-group
              label.col-form-label.col-form-label-sm(for="InputHInicial") H. Inicial
              input#InputHInicial.form-control.form-control-sm(type="time" value="08:00")
            span Sugestões:
            a.badge.badge-secondary(href="#") 07:00
            a.badge.badge-secondary(href="#") 15:00
            a.badge.badge-secondary(href="#") 13:00
          .col
            .form-group
              label.col-form-label.col-form-label-sm(for="InputHFinal") H. Final
              input#InputHFinal.form-control.form-control-sm(type="time" value="18:00")
            span Sugestões:
            a.badge.badge-secondary(href="#") 18:30
            a.badge.badge-secondary(href="#") 19:00
            a.badge.badge-secondary(href="#") 19:30
        .row
          .col
            .form-group
              label.col-form-label.col-form-label-sm(for="exampleFormControlTextarea1") Observações
              textarea#exampleFormControlTextarea1.form-control.form-control-sm(rows="2")
            span Sugestões:
            a.badge.badge-secondary(href="#") Viagem ao SSU
            a.badge.badge-secondary(href="#") Montagem
            a.badge.badge-secondary(href="#") Desmontagem
            a.badge.badge-secondary(href="#") da plataforma
        .row
          .col
            .form-check
              input#defaultCheck1.form-check-input(type="checkbox" value="" checked)
              label.form-check-label(for="defaultCheck1") Lembrar preferências
        button.btn.btn-primary(type="submit") Enviar